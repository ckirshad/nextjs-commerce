{
  "extends": ["next/core-web-vitals", "next/typescript"],
  "rules": {
    "@typescript-eslint/no-unused-vars": [
      "error",
      { "argsIgnorePattern": "^_" }
    ],
    "@typescript-eslint/no-explicit-any": "warn"
  },
  "ignorePatterns": [
    ".next/**",
    "node_modules/**",
    "coverage/**",
    "*.config.js",
    "*.config.ts",
    "*.config.mjs"
  ]
}
